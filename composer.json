{
    "name": "stimuliz/bmi",
    "description": "Convert BMI values to other formats",
    "keywords": [
        "stimuliz",
        "bmi"
    ],
    "homepage": "https://github.com/stimuliz/bmi",
    "license": "MIT",
    "authors": [
        {
            "name": "Jeroen Boumans",
            "email": "jeroen.boumans@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Stimuliz\\BMI\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Stimuliz\\BMI\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
